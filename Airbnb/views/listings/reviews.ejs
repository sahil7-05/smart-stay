<% layout("layouts/boilerplate") -%>
<div class="row">
  <div class="col-12">
    <h1 class="mb-4">Reviews for <%= listing.title %></h1>
    
    <!-- Add Review Form -->
    <% if (currentUser) { %>
    <div class="card mb-4">
      <div class="card-header">
        <h5>Add a Review</h5>
      </div>
      <div class="card-body">
        <form action="/listings/<%= listing._id %>/reviews" method="POST">
          <div class="mb-3">
            <label for="rating" class="form-label">Rating (1-5)</label>
            <select class="form-select" name="rating" id="rating" required>
              <option value="">Select rating</option>
              <option value="5">5 - Excellent</option>
              <option value="4">4 - Very Good</option>
              <option value="3">3 - Good</option>
              <option value="2">2 - Fair</option>
              <option value="1">1 - Poor</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="review" class="form-label">Review</label>
            <textarea class="form-control" name="review" id="review" rows="4" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
      </div>
    </div>
    <% } %>
    
    <!-- Reviews List -->
    <div class="card">
      <div class="card-header">
        <h5>Reviews</h5>
      </div>
      <div class="card-body">
        <% if (reviews && reviews.length > 0) { %>
          <% for (let review of reviews) { %>
            <div class="review-item mb-3 border-bottom pb-3">
              <div class="d-flex justify-content-between align-items-center">
                <h6><%= review.user.name %></h6>
                <div class="rating">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <span class="<%= i <= review.rating ? 'text-warning' : 'text-muted' %>">â˜…</span>
                  <% } %>
                </div>
              </div>
              <p class="mb-1"><%= review.review %></p>
              <small class="text-muted"><%= review.createdAt.toLocaleDateString() %></small>
            </div>
          <% } %>
        <% } else { %>
          <p>No reviews yet. Be the first to leave a review!</p>
        <% } %>
      </div>
    </div>
  </div>
</div>
