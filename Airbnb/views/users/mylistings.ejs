<%- layout("layouts/boilerplate") -%>
<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="mb-0">My Listings</h1>
      <a href="/listings/new" class="btn btn-success">
        <i class="fas fa-plus"></i> Add New Listing
      </a>
    </div>
    
    <% if (listings.length === 0) { %>
      <div class="text-center py-5">
        <i class="fas fa-home fa-5x text-muted mb-4"></i>
        <h3 class="text-muted mb-3">No listings yet</h3>
        <p class="text-muted mb-4">You haven't created any listings yet.</p>
        <a href="/listings/new" class="btn btn-primary">
          <i class="fas fa-plus"></i> Create Your First Listing
        </a>
      </div>
    <% } else { %>
      <div class="row">
        <% for (let listing of listings) { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
              <img src="<%= listing.image?.url || 'https://via.placeholder.com/400x250?text=No+Image' %>" 
                   class="card-img-top" 
                   alt="<%= listing.title %>"
                   style="height: 200px; object-fit: cover;">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text flex-grow-1">
                  <%= listing.description.substring(0, 100) %>...
                </p>
                <p class="text-muted mb-1">
                  <i class="fas fa-map-marker-alt"></i> <%= listing.location %>, <%= listing.country %>
                </p>
                <p class="text-primary fw-bold mb-3">$<%= listing.price %>/night</p>
                
                <div class="d-flex gap-2">
                  <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-sm flex-fill">
                    <i class="fas fa-eye"></i> View
                  </a>
                  <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning btn-sm flex-fill">
                    <i class="fas fa-edit"></i> Edit
                  </a>
                  <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="flex-fill">
                    <button type="submit" class="btn btn-danger btn-sm w-100" 
                            onclick="return confirm('Are you sure you want to delete this listing?')">
                      <i class="fas fa-trash"></i> Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>
</div>
